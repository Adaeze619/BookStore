@model UpdateBookRequest

<form asp-action="Update" asp-controller="Books" method="post">
    <div class="form-group">
        <label asp-for="BookTitle"></label>
        <input asp-for="BookTitle" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="ISBN"></label>
        <textarea asp-for="ISBN" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Author"></label>
        <textarea asp-for="Author" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>
