@model List<BookHaven.Domain.Model.BookHavenTag>

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Show All Tags - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    <div class="container py-5">
        @if (Model != null && Model.Count > 0)
        {
            <table class="table">
                <thead>
                    <!-- Use "thead" instead of "thread" -->
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Display Name</th>
                        <th>Action</th> <!-- Use a more descriptive header -->
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tag in Model)
                    {
                        <tr>
                            <td>@tag.Id</td>
                            <td>@tag.Name</td>
                            <td>@tag.DisplayName</td>
                            <td>
                                <a asp-area="" asp-controller="AdminTags"
                                   asp-action="Edit"
                                   asp-route-id="@tag.Id">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No tags found!</p>
        }
    </div>
</div>
